<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="pl.urban.korkpys_desktop.controller.AddInvoiceViewController" alignment="CENTER" spacing="20">
    <Button fx:id="returnButton" text="← Powrót" onAction="#handleReturnToHelloView" style="-fx-font-size: 40px;"/>

    <ComboBox fx:id="monthInput" prefWidth="200" prefHeight="60">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="Styczeń"/>
                <String fx:value="Luty"/>
                <String fx:value="Marzec"/>
                <String fx:value="Kwiecień"/>
                <String fx:value="Maj"/>
                <String fx:value="Czerwiec"/>
                <String fx:value="Lipiec"/>
                <String fx:value="Sierpień"/>
                <String fx:value="Wrzesień"/>
                <String fx:value="Październik"/>
                <String fx:value="Listopad"/>
                <String fx:value="Grudzień"/>
            </FXCollections>
        </items>
    </ComboBox>
    <TextField fx:id="yearInput" promptText="Rok" prefWidth="200" prefHeight="60"/>
    <HBox alignment="CENTER" spacing="10">
        <Button fx:id="uploadImageButton" text="Wybierz obraz" prefWidth="300" prefHeight="90"/>
        <Label fx:id="imageInfoLabel" text="Nie wybrano obrazu"/>
    </HBox>
    <ImageView fx:id="invoiceImageView" fitWidth="200" fitHeight="200" preserveRatio="true"/>
    <Button fx:id="saveInvoiceButton" text="Zapisz Fakturę" style="-fx-background-color: #44c4ec;" prefWidth="300" prefHeight="90"/>
</VBox>